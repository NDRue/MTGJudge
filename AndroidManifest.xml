<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndrue.gathereroffline"
    android:versionCode="4"
    android:versionName="0.16" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/card_back"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar"
		android:launchMode="singleTask"
		android:clearTaskOnLaunch="true" >
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".HomeScreen"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="AddonDescription" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="AdvancedSearch" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="AdvancedSearchHome" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="ExtraAddOns" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="MiscOptions" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="TournamentRules" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="InfractionPenalty" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="ComprehensiveRules" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="DisplayDetails" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="DecklistCounter" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="MainActivity" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="ImageOnly" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="InitCardData" android:configChanges="orientation|screenSize"></activity>
        <activity android:name="ShowCardDetails" android:configChanges="orientation|screenSize"></activity>
        </application>

</manifest>